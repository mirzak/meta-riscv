# short-description: Create SD card image with embedded bbl.bin

part bbl --source rawcopy --sourceparams="file=bbl.bin" --ondisk mmcblk --no-table --align 1 --use-uuid --fsuuid 2e54b353-1271-4842-806f-e436d6af6985
part / --source rootfs --ondisk mmcblk --fstype=ext4 --label root --align 4096 --size 1G

bootloader --ptable msdos
